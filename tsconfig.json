{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./out",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["@playwright/test", "node"]
  },
  "include": [
    "api/**/*.ts",
    "e2e/**/*.ts"
, "e2e/tests/home.spec"  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "playwright-report",
    "test-results"
  ]
}
